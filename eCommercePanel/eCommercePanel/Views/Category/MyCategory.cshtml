@model CategoryModel


<a href="/Category/AddCategory" class="btn btn-success mb-3">+ Yeni Kategori Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Açıklaması</th>
            <th>İşlemler</th>  
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Categories)
        {
            <tr>
                <td>@product.CategoryName</td>
                <td>@product.Description</td>
                <td>
                    <a href="@Url.Action("EditCategory", "Category", new { id = product.CategoryId })" class="btn btn-primary btn-sm">Düzenle</a>
                    <a href="@Url.Action("DeleteCategory", "Category", new { id = product.CategoryId })" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
